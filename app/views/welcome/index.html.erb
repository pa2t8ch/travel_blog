		<% @posts.each do |post| %>
			<h3><a href="#"><%= link_to post.title, post %></a></h3>
			<p class="date"><%= post.created_at.strftime("%A, %b %d") %></p>
		<% end %>

		<%= link_to "View all", posts_path %>

	</div>
	<div class="col-3 homepage_content">
		<%= image_tag("railey west beach.JPG", :alt => "", :style => "width: 35em; height: 28em") %>
	</div>
</div>
